$light-blue: #1489CB;
$light-blue-border: darken($light-blue, 40%);
$orange: #CB7400;
$orange-border: darken($orange, 30%);
$dark-blue: #004F7D;

@import url(http://fonts.googleapis.com/css?family=Sonsie+One);
@font-face {
  font-family: 'League Gothic';
  src: url('/League Gothic.otf');
}

.navbar .brand {
  font-family: 'Sonsie One';
}

.navbar .icon {
  float: left;
  margin-right: 5px;
  margin-top: 3px;
}

.container .map_container {
  width: 100%;
  margin: 0 auto;
}

.content .map_container {
  border-color: $light-blue;
  background: $light-blue;
  width: auto;
  padding: 6px;
}

.ridesListContainer {
  padding: 15px 6px 15px 6px;
  background-color: #D9D2CA;  
  border-width: 1px;
  border-style: solid;
  -moz-box-shadow: inset 0 0 5px #999;
  -webkit-box-shadow: inset 0 0 5px#999;
  box-shadow: inner 0 0 5px #999;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
  border-color: lighten($orange, 5%);
}

#ridesList {
  list-style-type: none;
  height: 382px;
}

#ridesList li {
  background-color: $dark-blue;
  margin-bottom: 10px;
  text-align: center;
  position: relative;
}

#ridesList li div {
  padding: 10px 0 10px 0;
  width: 100%;
}

#ridesList li a:hover {
  text-decoration: none;
}

#ridesList li:hover {
  background-color: $orange;
  span, p {
    color: $dark-blue;
    text-shadow: 1px 1px 2px #000;
  }
}

#ridesList li i {
  position: absolute;
  right: 5px;
  bottom: 40%;
}

#ridesList li:hover i {
  background-image: url(/assets/twitter/bootstrap/glyphicons-halflings.png);
}

#ridesList li p {
  color: $orange;
  text-shadow: 1px 1px 2px $orange-border;
  text-transform: uppercase;
  font-size: 24px;
  font-family: 'League Gothic';
}

#ridesList li span {
  color: $orange;
  text-shadow: 1px 1px 2px $orange-border;
  text-transform: uppercase;
  font-size: 16px;
  font-family: 'League Gothic';
  letter-spacing: 1px;
}

.container #map {
  width: 100%;
}

#new_ride #map {
  height: 200px;
}
#new_ride .map_container {
  margin: 0 0 0 160px;
}

.infobox {
  background-color: #004F7D;
  padding: 10px;
  border: 1px solid #004F7D;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
  -moz-box-shadow: 3px 3px 5px 2px #888;
  -webkit-box-shadow: 3px 3px 5px 2px #888;
  box-shadow: 3px 3px 5px 2px #888;
}

.infobox h2 {
  text-align: center;
  color: $orange;
  text-shadow: 1px 1px 2px $orange-border;
  text-transform: uppercase;
  font-size: 30px;
  padding-top: 15px;
  font-family: 'League Gothic';
}

.ui-datepicker-year {
  display: none;
}
.infobox p {
  margin: 0;
  color: $orange;
  font-weight: bold;
}

.infobox a {
  text-decoration: none;
  border-bottom: 1px dotted $orange;
}

.infobox a:hover {
  border-bottom: 1px solid $orange;
  text-decoration: none;
}

.infobox a, .infobox a:hover {
  color: $orange;
}

.infobox p span {
  display: inline-block;
  width: 120px;
  font-weight: bold;
  color: $light-blue;
  text-shadow: 0px 1px 1px $orange-border;
}

.infobox i {
  display: none;
}

.infobox .addressBox .address {
  width: auto;
  color: $orange;
  font-weight: bold;
  text-shadow: none;
}
.infobox .addressBox .addressExtraLine {
  margin-left: 60px;
  padding-left: 4px;
}

.infobox .addressBox span{
  width: 60px;
}

.map-header {
  text-align: center;
  margin-bottom: 30px;
  margin-top: 10px;
}

.map-header h1, .map-header h2{
  width: auto;
  font-family: 'League Gothic';
  font-size: 60px;
  color: $orange;
  text-shadow: 1px 1px 2px $orange-border;
  text-transform: uppercase;
}

.map-header h2 {
  color: lighten($light-blue, 10%);
  text-shadow: 1px 1px 2px $light-blue-border;
  font-size: 30px;
  margin-top: 10px;
}

.map-header h1 span {
  color: $light-blue;
  text-shadow: 1px 1px 2px $light-blue-border;
}

#navigation-bar .nav > li > a {
  color: #ccc;
  padding: 5px;
  font-weight: bold;
}

#navigation-bar .nav > li:hover > a, #navigation-bar .nav > li.active > a{
  color: #fff;
  background-color: transparent;
}

#navigation-bar .nav > li:hover, #navigation-bar .nav > li.active {
  background-color: #325FAD;
  color: #fff;
}

#navigation-bar .nav > li {
  margin-top: 3px;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
  margin-right: 10px
}

footer {
  margin: 50px auto 0;
  text-align: center;
}

footer p {
  color: #fff;
}

.navbar [class^="icon-"] {
  margin-right: 2px;
}

body {
  background: url(<%= asset_path 'mac_bg.png' %>) top left repeat-x;
  padding-top: 10px;
  background-color: #4f99d2
}

header h1 {
  width: 706px;
  margin: 0 auto;
}

header {
  text-align: center;
}

header h2 {
  color: $orange;
  font-size: 40px;
  text-shadow: 1px 3px 3px #000;
  font-family: 'League Gothic';
  text-transform: uppercase;
}

#buttonContainer {
  width: 920px;
  margin: 40px auto 0;
  padding: 0
}

#buttonContainer a{
  margin: 0;
  padding: 0;
  display: inline-block;
  float: left;
}

#addARide {
  width: 460px;
  height: 420px;
  background: url(<%= asset_path 'add_a_ride_button.png' %>) top left no-repeat;
}

#addARide:hover {
  background-position: 0px -419px;
}

#findARide {
  width: 460px;
  height: 420px;
  background: url(<%= asset_path 'find_a_ride_button.png' %>) top left no-repeat;
}

#findARide:hover {
  background-position: 0px -420px;
}

image {
  max-width: none;
}


.addLink a{
  color: $orange;
  font-weight: bold;
}

.addLink p {
  color: white;
}

.addLink a:hover {
  color: $light-blue;
}

.ridesCount p{
  color: #fff;
  font-family: 'League Gothic';
  font-size: 24px;
  text-align:center;
  float: none;
}

.ridesCount p span {
  color: lighten($orange, 5%);
}

#ridesSearch {
  margin-top: 15px;
  margin-bottom: 15px;
}

#ridesSearch button {
  position: absolute;
  right: -16px;
  top: 0px;
  font-family: 'League Gothic';
  font-size: 30px;
  height: 50px;
  -moz-border-radius: 0 4px 4px 0;
  border-radius: 0 4px 4px 0;
  -webkit-border-radius: 0 4px 4px 0;
  color: $light-blue;
}

#ridesSearch input {
  height: 40px;
  font-size: 20px;
  padding-left: 10px;
  margin-left: -10px;
}

// Forms

.form-header {
  text-align: center;
  margin: 30px auto 35px;
}

.form-header h1 {
  width: auto;
  font-family: 'League Gothic';
  font-size: 60px;
  color: $orange;
  text-shadow: 1px 1px 2px $orange-border;
  text-transform: uppercase;
}

form legend {
  font-family: 'League Gothic';
  font-size: 36px;
  margin-left: 160px;
  border: none;
  width: 200px;
}

form legend a {
  text-decoration: underline;
  color: #333;
}

form legend a i {
  margin-top: 10px;
}

.adv-opts-container {
  display: none;
  margin-top: 30px;
  padding-top: 30px;
}

// Modal Styles

#similarRides ul {
  margin-left: 0;
}

#similarRides ul li {
  list-style-type: none;
}

#similarRides .infobox {
  text-align: left
}

#similarRides .infobox h2 {
  padding-top: 0;
  text-align: left;
  width: auto;
  cursor: pointer;
}

#similarRides .infobox div {
  display: none;
}

#similarRides .infobox i {
  display: block;
  cursor: pointer;
  float: left;
  margin-top: 10px;
  margin-right: 5px;
  background-color: $orange;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
}

#similarRides .infobox .addressBox span{
  width: 120px;
}

#similarRides .infobox .addressBox .address{
  width: auto;
}

footer a {
  color: $light-blue;
}
footer a:hover {
  color: $light-blue;
}

#ridesTable {
  background-color: #fff;
  border: 3px solid $light-blue;
}

#ridesTable td, #ridesTable th {
  border-color: $light-blue;
  text-align: center;
}

#ridesTable td a {

}

#ridesTable th {
  font-family: 'League Gothic';
  font-size: 24px;
  text-align: center;
  background-color: $orange;
}

#ridesTable tbody tr:nth-child(odd) td, #ridesTable tbody tr:nth-child(odd) th {
  background-color: #ccc;
}

#ridesTable tbody tr:hover td, .table tbody tr:hover th {
  background-color: $light-blue;
  cursor: pointer;
}

.container .slideMenu {
  display: none;
  position: absolute;
  z-index:1000;
  -moz-box-shadow: 0px 3px 6px #000;
  -webkit-box-shadow: 0px 3px 6px #000;
  box-shadow: 0px 3px 6px #000;
}

#about {
  right: 10px;
  top: -25px;
}

#about a {
  font-weight: bold;
  color: $light-blue;
}

#share {
  padding-top: 30px;
  right: 0px;
  top: -25px;
  z-index:1000;
  background-color: $light-blue;
}

#feedback {
  padding-top: 30px;
  right: 80px;
  top: -25px;
  z-index:1000;
  background-color: $light-blue;
}

#feedback ul {
  margin: 0;
}

#feedback ul li {
  list-style-type: none;
  text-align: center;
  margin-bottom: 10px;
}

#feedback a {
  font-weight: bold;
}

#navigation-bar .nav > .noHighlight:hover, #navigation-bar .nav > .noHighlight.active {
  background-color: transparent;
  color: #fff;
}

.nav li iframe {
  margin-top: 5px;
}

.container {
  position: relative;
}